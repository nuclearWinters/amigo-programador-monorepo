{
  "name": "backend-node-amp",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node-dev --transpile-only ./src/index.ts",
    "populate": "npx tsc && node ./build/populate.js",
    "build": "npx tsc",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail --runTestsByPath ./src/mutations/*test.ts"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "@types/cors": "^2.8.10",
    "date-fns": "^2.25.0",
    "dotenv": "^11.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^16.2.0",
    "graphql-relay": "^0.10.0",
    "jsonwebtoken": "^8.5.1",
    "@types/jsonwebtoken": "^8.5.7",
    "redis": "^4.0.0",
    "mongodb": "^4.1.3",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.13.0",
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-jest": "^27.0.2",
    "eslint": "^8.1.0",
    "jest": "^27.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.3.0",
    "supertest": "^6.2.1",
    "ts-node-dev": "^1.1.8"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail"
    ]
  },
  "jest": {
    "preset": "@shelf/jest-mongodb",
    "modulePathIgnorePatterns": [
      "build/"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
